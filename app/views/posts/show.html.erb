<div class="row">
	<div class="span8 offset2">
		<p><h3><strong>Title:</strong>
		  <em><%= @post.title %></em></h3></p>
		<div class="row">
			<div class="span8 well" style="word-wrap: break-word;">
				<p><strong>Text:</strong>
				  <%= @post.text %></p>
			</div>
		</div> 
	</div>
</div>	
<div class="row">	
	<div class="span2 offset2 ">
		<%= link_to 'Редактировать', edit_post_path(@post), class:"btn btn-danger"%>
	</div>	
</div>
<div class="row">
	<div class="span6 offset3">
		</br><hr/>
		<%= render @post.comments %>
		<h2>Add a comment:</h2>
		<%= render "comments/form" %>
	</div>
</div>
	
