<div class="row">
	<div class="span9">
		<p><h3><strong>Title:</strong>
		  <em><%= @post.title %></em></h3></p>
		<div class="row">
			<div class="span9 well">
				<p><strong>Text:</strong>
				  <%= @post.text %></p>
			</div>
		</div> 
	</div>
</div>	
	<div class="row">	
		<div class="span2">
			<%= link_to 'Back to Posts', posts_path, class:"btn btn-inverse"%>
		</div>
		<div class="span2 offset6">
			<%= link_to 'Edit Post', edit_post_path(@post), class:"btn btn-danger"%>
		</div>	
	</div>
	<div class="row">
		<div class="span6 offset2">
			<%= render @post.comments %>
			<h2>Add a comment:</h2>
			<%= render "comments/form" %>
		</div>
	</div>
	
