
<div class="row">
  <div class="span2 offset5"><h2>Регистрация</h2></div>
</div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
              html: {class:"form-horizontal "}) do |f|  %>
  <div class="control-group offset3">
      <%= devise_error_messages! %>

      	<%= f.label :email, class:"control-label", for:"input01"%>
      	<div class="controls"><%= f.email_field :email, :autofocus => true, id:"input01"%></div></br>

      	<%= f.label :password, class:"control-label", for:"input02" %>
      	<div class="controls"><%= f.password_field :password, id:"input02" %></div></br>

      	<%= f.label :password_confirmation, class:"control-label", for:"input03" %>
      	<div class="controls"><%= f.password_field :password_confirmation, id:"input03" %></div></br>
     	
     	  <%= f.label :name, class:"control-label", for:"input04" %>
     	  <div class="controls"><%= f.text_field :name, id:"input04" %></div></br>
    	
    	  <%= f.label :surname, class:"control-label", for:"input05" %>
     	  <div class="controls"><%= f.text_field :surname, id:"input05" %></div></br>
    	
    	  <%= f.label :birthday, class:"control-label", for:"input06" %>
     	  <div class="controls"><%= f.date_field :birthday, id:"input06" %></div></br>

        <%= f.label :"Роль", class:"control-label", for:"input07" %>
        <div class="controls"><%= f.collection_select :role, User::ROLES, 
        :to_s, :humanize , id:"input07"%></div></br>
        
      	<div class="controls"><%= f.submit "Зарегистрироватся", class:"btn btn-success" %></div>
  </div>
    <% end %>
    
