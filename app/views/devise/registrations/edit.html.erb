<div class="row">
    <div class="span5 offset4"><h2>Персолнальные данные</h2></br></div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put,class:"form-horizontal " }) do |f| %>
  <%= devise_error_messages! %>
    
    <div class="control-group offset3">
      <%= f.label :email, class:"control-label", for:"input01" %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true, id:"input01"%></div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %></br>

      <%= f.label :"Новый пароль", class:"control-label", for:"input02" %> 
      <div class="controls">
        <%= f.password_field :password, :autocomplete => "off", id:"input02",
        :placeholder => "Оставь если не меняеш..."%>
      </div></br>

      <%= f.label :"Повторите пароль", class:"control-label", for:"input03"%>
      <div class="controls"><%= f.password_field :password_confirmation, id:"input03",
        :placeholder => "Оставь если не меняеш..."%></div></br>

      <%= f.label :"Текущий проль", class:"control-label", for:"input04" %> 
      <div class="controls">
        <%= f.password_field :current_password, id:"input04",
        :placeholder => "Для подтверждения!" %></div></br>
      
      <%= f.label :name, class:"control-label", for:"input01" %>
      <div class="controls"><%= f.text_field :name, id:"input01" %></div><br/>
      
      <%= f.label :surname, class:"control-label", for:"input02" %>
      <div class="controls"><%= f.text_field :surname, id:"input02" %></div><br/>
      
      <%= f.label :birthday, class:"control-label", for:"input03" %>
      <div class="controls"><%= f.date_field :birthday, id:"input03" %></div><br/>

      <%= f.label :"Роль", class:"control-label", for:"input04" %>
        <div class="controls"><%= f.collection_select :role, User::ROLES, 
        :to_s, :humanize , id:"input04"%></div></br>

      <div class="controls"><%= f.submit "Сохранить", class:"btn btn-success" %></div>
    </div>
<% end %>
 