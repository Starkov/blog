<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
        <div class="navbar navbar-inverse">
            <div class="navbar-inner">
                <%= link_to 'electronics DIY', root_path, class:"brand" %>
                <ul class="nav">
                  <% if user_signed_in? %>
                    <li><p class="navbar-text">
                      Здравствуйте, <em><%= current_user.name %> <%= current_user.surname %></em></p>
                    </li>
                  <% end %>
                </ul>

                <ul class="nav pull-right"> 
                  <li class="divider-vertical"> <%= link_to 'Добавить пост', new_post_path()%></li>
                    
                    <% if user_signed_in? %>
                        <li class="divider-vertical"> <%= link_to 'Мои посты', belong_to_user_posts_path,
                        method: :get%></li>
                        <li class="divider-vertical">
                            <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></li> 
                        <li class="divider-vertical">
                            <%= link_to 'Кабинет', edit_user_registration_path, :method => :get %></li>
                        <% else %>
                            <li class="divider-vertical"><%= link_to 'Войти', new_user_session_path %></li>
                            <li class="divider-vertical"><%= link_to 'Зарегистрироваться', new_user_registration_path %></li>
                    <% end %> 
                </ul>
            </div>
        </div>
		<div class="row">
      <div class="span12">
        <p class="notice"><%= notice %></p>
        <!-- <p class="alert"><%= alert %></p> -->
      </div>
    </div>   
    <div class="row">
      <div class="span6">
        
      </div>
      <div class="span1 offset5">
         
      </div>
    </div>

		<%= yield %>
    
	</div>
</body>
</html>
