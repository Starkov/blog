<%= form_for([@post, @post.comments.build], html: {class:"form-horizontal "}) do |f| %>
	<% if user_signed_in? %>
		<div class="control-group">
			<h3>Коментарий:</h3>
			<%= f.hidden_field :user_id, :value => current_user.id %>      
			<p><%= f.label :"Коментарий", class:"control-label", for:"input02" %></p>
			<div class="controls">
				<p><%= f.text_area :body, class:"input-xlarge", id:"input02", :rows => 7%></p>
			</div>
			<div class="controls">
					<%= f.submit "Сделать",class:"btn btn-danger" %>
			</div>
		</div>
	<% end %>
<% end %>